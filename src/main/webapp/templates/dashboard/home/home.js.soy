{namespace dashboard.home}

/**
 * Home Page for timetables
 * @param user
 * @param services
 */
{template .index}
	<div class="row">
        <ul class="panels">
            <li class="panel-wrapper columns large-12">
                <div class="list-panel">
                    <div class="row list-inner-panel">
                        <div class="columns large-11 small-11"><h3>Welcome {$user.name} - Dashboard</h3></div>
                    	<div class="columns large-1 small-1">
	                        <!--user picture-->
	                        {if $user.photo == 'undefined'}
	                        <img src="/dashboard/img/nophoto.jpeg"/>
	                        {else}
	                        <img src="data:image/jpeg;base64,{$user.photo}"/>
	                        {/if}                                      
	                         <!--end user picture-->
                    	</div>
                    </div>
                </div>
                <ul class="sub-panel expanded">
                    <li class="list-sub-panel">
                        <div class="row list-inner-sub-panel">           
                            <div class="columns large-9 small-9 text-left">
                                <div class="row">
                                    <div class="columns large-11 small-11 text-left">
                    	                <ul class="udetails"> 
                	                    	<li><div class="fixed-width-icon"><i class="icon icon-user"></i></div><strong>CRSID:</strong> {$user.crsid}</li>
                	                    	<li><div class="fixed-width-icon"><i class="icon icon-user"></i></div><strong>Username:</strong> {$user.name}</li>
                	                    	<li><div class="fixed-width-icon"><i class="icon icon-mail"></i></div><strong>Email:</strong> {$user.email}</li>
            	                        	<li><div class="fixed-width-icon"><i class="icon icon-data_science_black"></i></div><strong>College/Department ID:</strong> <span class="round secondary label">{$user.instID} </span></li>
            	                        	<li><div class="fixed-width-icon"><i class="icon icon-globe"></i></div><strong>Institution:</strong> <span class="round secondary label">{$user.institution} </span></li>
	    	                                <li><div class="fixed-width-icon"><i class="icon icon-lock"></i></div><strong>User status:</strong> <span class="label round">{if $user.supervisor}Supervisor{else}Student{/if} </span></li>
    	                                </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
					<li class="list-sub-panel">
                        <div class="row list-inner-sub-panel">                           
                            <div class="columns large-11 small-11 text-left">
                                <div class="row">
                                    <div class="columns large-12 small-12 text-left">
                                    	<strong>Active services:</strong>
                                    	<span class="services label {if $services.signups}success{else}error{/if}">Signups</span>
                                        <span class="services label {if $services.questions}success{else}error{/if}">Questions</span>
                                    	<span class="services label {if $services.handins}success{else}error{/if}">Handins</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </li>
        </ul>
    </div>
{/template}