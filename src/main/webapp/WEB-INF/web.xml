<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
		
	<!-- Include this for the raven filter -->
	<filter>
		<filter-name>ravenFilter</filter-name>
		<filter-class>uk.ac.cam.dashboard.webauth.RavenFilter</filter-class>
		<init-param>
			<param-name>maxSkew</param-name>
			<param-value>30000</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>ravenFilterUnauth</filter-name>
		<filter-class>uk.ac.cam.dashboard.webauth.RavenFilter</filter-class>
		<init-param>
			<param-name>allowUnauthorised</param-name>
			<param-value>true</param-value>
		</init-param>
		<init-param>
			<param-name>maxSkew</param-name>
			<param-value>30000</param-value>
		</init-param>
	</filter>
	
	<!-- Include this for the api filter --> 
	<filter>
		<filter-name>apiFilter</filter-name>
		<filter-class>uk.ac.cam.dashboard.webauth.ApiFilter</filter-class>
	</filter>
	
	<!-- Include this for the Hibernate filter -->
	<filter>
		<filter-name>Hibernate</filter-name>
		<filter-class>uk.ac.cam.dashboard.util.HibernateSessionRequestFilter</filter-class>
	</filter>

	<filter>
		<filter-name>Htmleasy</filter-name>
		<filter-class>com.googlecode.htmleasy.HtmleasyFilterDispatcher</filter-class>
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>uk.ac.cam.dashboard.util.Dashboard</param-value>
		</init-param>
	</filter>

	<!-- Include for raven filter (url-pattern set to /* for securing all 
	pages of the website with raven) -->
	<filter-mapping>
		<filter-name>ravenFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!-- Include for the api filter
	<filter-mapping>
		<filter-name>ravenFilterUnauth</filter-name>
		<url-pattern>/api/*</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>apiFilter</filter-name>
		<url-pattern>/api/*</url-pattern>
	</filter-mapping>
 	-->
 	
	<filter-mapping>
		<filter-name>Hibernate</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>Htmleasy</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>soy</servlet-name>
		<servlet-class>com.papercut.silken.SilkenServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
		<init-param>
			<param-name>disableCaching</param-name>
			<param-value>true</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>soy</servlet-name>
		<url-pattern>/soy/*</url-pattern>
	</servlet-mapping>
</web-app>